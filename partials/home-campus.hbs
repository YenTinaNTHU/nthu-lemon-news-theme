<div class="gh-outer">
{{#get "tags" filter="slug:campus"}}
    <h2 class="topic-title">{{tags.[0].name}}</h2>
    {{#if tags.[0].description}}
        <p class="m-hero-description">
        {{tags.[0].description}}
        </p>
    {{/if}}
{{/get}}
</div>
{{#get "posts" filter="tag:campus" limit="10" include="tags"}}
<div class="gh-outer"><div class="featured-posts carousel owl gh-inner">
    
    {{#foreach posts}}
    <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}}">

        <figure class="post-media">
        <div class="u-placeholder rectangle">
            <a class="post-image-link" href="{{url}}">
                {{#if feature_image}}
                    <img class="post-image u-object-fit" src="{{img_url feature_image size="m"}}" alt="{{title}}">
                {{/if}}
            </a>
        </div>
        </figure>

        <header class="post-header">
            <h2 class="post-title">
                <a class="post-title-link" href="{{url}}">{{title}}</a>
            </h2>
            <div class="post-meta">
                <span class="post-meta-item post-meta-date">
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at}}</time>
                </span>
            </div>
        </header>

        {{#if excerpt}}
            <p class="card-post-content">{{excerpt}}</p>
            {{else}}
		        <p class="card-post-content">{{content}}</p>
        {{/if}}

    </article>
    {{/foreach}}

</div></div>
{{/get}}